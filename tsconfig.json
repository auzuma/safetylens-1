{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}